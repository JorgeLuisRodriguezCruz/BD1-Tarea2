@model Tarea__2.Models.ArticuloEntity

@{
    ViewData["Title"] = "Insertar";
    List<SelectListItem> opciones = (List<SelectListItem>)ViewBag.opciones;
}

<br />
<h4>Insertar</h4> <hr />

<div class="row">
    <div class="col-md-4">
        <!--form asp-action="Create"-->
            <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdClaseArticulo" class="control-label">Tipo de articulo:</label> 
                <select asp-for="IdClaseArticulo" class="form-select" name="ClaseArt">
                    @foreach (var op in opciones)
                    {
                        <option value="@Html.DisplayName(op.Value)"> @Html.DisplayName(op.Text)</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            @if (TempData["Message"] != null)
            {
                <div>
                    @TempData["Message"]
                </div>
            } 
            <br />
            <div class="form-group"> 
                <input type="submit" value="Confirmar" class="btn btn-primary" />  
            </div>

        </form> <br />
        
        <a asp-action="Index">  <input type="submit" value="Cancelar" class="btn btn-primary"> </a>
    </div>
</div>
